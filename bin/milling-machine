###############################################################################
## Imports
###############################################################################
import os
import sys
import traceback

# Local imports
from cups_fab.device import Vector
from cups_fab.job import Job
from cups_fab import log


###############################################################################
## Functions
###############################################################################

def main():
    """
    Main method of program.
    """
    if len(sys.argv) == 1:
        program_name = os.path.basename(sys.argv[0])
        print "direct %s \"Unknown\" \"Milling Machine (thin red lines vector cut)\"\n" % program_name
        sys.exit(1)

    job = Job(sys.argv)
    printer = Vector(os.getenv('DEVICE_URI'))
    printer.run(job)

if __name__ == '__main__':
    try:
        main()
        sys.exit(0)
    except Exception as e:
        traceback.print_exc()
        log.crit("Unexpected failure %s." % e)
        sys.exit(1)

